@model BookStore.Models.ViewModels.Book.BookDetailsViewModel

<div class="col-md-6">
    <button type="button" class="btn btn-default" data-toggle="modal" data-target="#add-category">
        Add Category
    </button>
    <hr />
    <div class="modal fade" id="add-category" role="dialog">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header text-center">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h1 class="modal-title text-center text-danger"><span class="glyphicon glyphicon-book"></span></h1>
                </div>
                <div class="modal-body">
                    <div class="modal-div">
                        <p class="text-danger">Add This Book In Selected Category</p>
                    </div>
                    <hr />
                    <div class="modal-div">
                        @using (Html.BeginForm("AddCategoryToBook", "Books", FormMethod.Post))
                        {
                            @Html.AntiForgeryToken()
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                            @Html.HiddenFor(model => model.Id)

                            <div class="col-md-6">
                                @Html.LabelFor(model => model.SelectCategories, htmlAttributes: new { @class = "control-label" })
                                <div class="form-group">
                                    @Html.DropDownList("SelectCategories", Model.SelectCategories as SelectList, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.SelectCategories, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-actions no-color text-center col-md-6">
                                <input type="submit" value="Add" class="btn btn-default" />
                            </div>
                        }
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
                </div>
            </div>
        </div>
    </div>
</div>







