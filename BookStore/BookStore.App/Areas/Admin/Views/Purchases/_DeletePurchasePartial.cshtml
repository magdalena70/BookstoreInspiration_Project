@model BookStore.Models.ViewModels.Purchase.PurchaseDetailsViewModel

<div class="col-md-4">
    <button type="button" class="btn btn-danger" data-toggle="modal" data-target="#delete-purchase">
        Delete
    </button>
    <hr />
    <div class="modal fade" id="delete-purchase" role="dialog">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header text-center">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h1 class="modal-title text-center text-danger"><span class="glyphicon glyphicon-trash"></span></h1>
                </div>
                <div class="modal-body">
                    <div class="modal-div">
                        <p class="text-danger">Are you sure you want to delete this purchase?</p>
                    </div>
                    <hr />
                    <div class="modal-div">
                        @using (Html.BeginForm("Delete", "Purchases", FormMethod.Post))
                        {
                            @Html.AntiForgeryToken()
                            @Html.HiddenFor(model => model.Id)

                            <div class="form-actions no-color text-center">
                                <input type="submit" value="Delete" class="btn btn-danger" />
                            </div>
                        }
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
                </div>
            </div>
        </div>
    </div>
</div>





