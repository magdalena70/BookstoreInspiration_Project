@model BookStore.Models.ViewModels.Purchase.EditPurchaseViewModel

@{
    ViewBag.Title = "Edit Purchase";
}

<div class="row">
    <div class="col-md-10 col-md-offset-1">
        <h2>@ViewBag.Title</h2>
    </div>
</div>
<div class="col-md-8 col-md-offset-1">
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.Id)

            <div class="form-group">
                @Html.LabelFor(model => model.IsCompleted, htmlAttributes: new { @class = "control-label col-md-4" })
                <div class="col-md-8">
                    <div class="checkbox">
                        @Html.EditorFor(model => model.IsCompleted)
                        @Html.ValidationMessageFor(model => model.IsCompleted, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.CompletedOndate, htmlAttributes: new { @class = "control-label" })
                <div class="col-md-12">
                    <div class="input-group date">
                        @Html.EditorFor(model => model.CompletedOndate, new { htmlAttributes = new { @class = "form-control datetimepicker" } })
                        <span class="input-group-addon">
                            <span class="glyphicon glyphicon-calendar"></span>
                        </span>
                    </div>
                    @Html.ValidationMessageFor(model => model.CompletedOndate, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.DeliveryAddress, htmlAttributes: new { @class = "control-label" })
                <div class="col-md-12">
                    @Html.EditorFor(model => model.DeliveryAddress, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.DeliveryAddress, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.DeliveryDate, htmlAttributes: new { @class = "control-label" })
                <div class="col-md-12">
                    <div class="input-group date">
                        @Html.EditorFor(model => model.DeliveryDate, new { htmlAttributes = new { @class = "form-control datetimepicker" } })
                        <span class="input-group-addon">
                            <span class="glyphicon glyphicon-calendar"></span>
                        </span>
                    </div>
                    @Html.ValidationMessageFor(model => model.DeliveryDate, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.DeliveryPrice, htmlAttributes: new { @class = "control-label" })
                <div class="col-md-12">
                    @Html.EditorFor(model => model.DeliveryPrice, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.DeliveryPrice, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Save" class="btn btn-default" />
                </div>
            </div>
        </div>
    }
</div>
<div class="col-md-3">
    <p>@Html.ActionLink("Back to All Purchases", "AllPurchases", "Purchases", new { area = "Admin" }, null)</p>
    <p>@Html.ActionLink("Details", "Details", "Purchases", new { area = "Admin", id = Model.Id }, null)</p>
    <p>@Html.ActionLink("Delete", "Delete", "Purchases", new { area = "Admin", id = Model.Id }, null)</p>
</div>

@section Scripts{
    <script type="text/javascript">
        $(function () {
            $('.datetimepicker').datetimepicker({ format: 'YYYY-MM-DD HH:mm:ss' });
        });
    </script>
}