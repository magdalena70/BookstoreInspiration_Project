@model IEnumerable<BookStore.Models.ViewModels.Author.AuthorViewModel>

@{
    ViewBag.Title = "All Authors";
}

<div class="row">
    <div class="col-md-10 col-md-offset-1">
        <h2>@ViewBag.Title</h2>
    </div>
</div>
<p>
    @Html.ActionLink("Create New", "AddAuthor")
</p>
<div class="row">
    <div class="col-lg-6 pull-right">
        @using (Html.BeginForm("AllAuthors", "Authors", FormMethod.Get, new { @class = "form-horizontal", role = "search" }))
        {
            <div class="input-group">
                <span class="input-group-btn">
                    <button class="btn btn-default" type="submit">
                        <span class="glyphicon glyphicon-search"></span>
                    </button>
                </span>
                <input type="text" name="authorName" class="form-control" placeholder="Search Author By Name">
            </div>
        }
    </div>
</div>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.FullName)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.FullName)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) ||
            @Html.ActionLink("Details", "Details", new { id=item.Id }) ||
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
