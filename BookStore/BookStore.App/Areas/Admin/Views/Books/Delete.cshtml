@model BookStore.Models.ViewModels.Book.DeleteBookViewModel

@{
    ViewBag.Title = "Delete book";
}

<div class="row">
    <div class="col-md-10 col-md-offset-1">
        <h4>@ViewBag.Title</h4>
    </div>
</div>
<div class="row text-center">
    <div class="col-md-10 col-md-offset-1">
        <h3 class="text-danger">
            Are you sure you want to delete
            <span>&quot;</span>@Html.DisplayFor(model => model.Title)<span>&quot;</span>
        </h3>
        <hr />
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-actions no-color">
                <input type="submit" value="Delete" class="btn btn-danger" />
            </div>
        }
    </div>
</div>
<hr />
<div class="row">
    <div class="col-md-10 col-md-offset-1">
        <p>@Html.ActionLink("Edit", "Edit", new { id = Model.Id })</p>
        <p>@Html.ActionLink("Back to All Books", "AllBooks")</p>
        <p>@Html.ActionLink("Details", "Details", new { id = Model.Id })</p>
    </div>
</div>
