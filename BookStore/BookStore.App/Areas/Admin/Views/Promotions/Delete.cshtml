@model BookStore.Models.EntityModels.Promotion

@{
    ViewBag.Title = "Delete Promotion";
}

<div class="row">
    <div class="col-md-10 col-md-offset-1">
        <h4>@ViewBag.Title</h4>
    </div>
</div>
<div class="row text-center">
    <div class="col-md-10 col-md-offset-1">
        <h3 class="text-danger">
            Are you sure you want to delete
            <span>&quot;</span>@Html.DisplayFor(model => model.Name)<span>&quot;</span>
        </h3>
        <hr />
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-actions no-color">
                <input type="submit" value="Delete" class="btn btn-danger" />
            </div>
        }
    </div>
</div>
<hr />
<div class="row">
    <div class="col-md-10 col-md-offset-1">
        <p>@Html.ActionLink("Back to All Promotions", "AllPromotions")</p>
        <p>@Html.ActionLink("Edit", "Edit", "Promotions", new { area = "Admin", id = Model.Id }, null)</p>
        <p>@Html.ActionLink("Delete", "Delete", "Promotions", new { area = "Admin", id = Model.Id }, null)</p>
    </div>
</div>